@model ProjectJobSearch.Models.CompanyInsert
@{
    ViewBag.Title = "companyreg_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Company Registration</h2>
<div id="div1">
    @using (Html.BeginForm("companyreg_click", "CompanyReg", FormMethod.Post))
    {
        <div><label>Company Name : </label></div>
        <div>
            @Html.TextBoxFor(m => m.company_name)
            @Html.ValidationMessageFor(m => m.company_name)
        </div>

        <div><label>Company Address:</label></div>
        <div>
            @Html.TextAreaFor(m => m.company_address)
            @Html.ValidationMessageFor(m => m.company_address)
        </div>

        <div><label>Phone:</label></div>
        <div>
            @Html.TextBoxFor(m => m.company_phone)

            @Html.ValidationMessageFor(m => m.company_phone)
        </div>

        <div><label>Email:</label></div>
        <div>
            @Html.TextBoxFor(m => m.company_email)

            @Html.ValidationMessageFor(m => m.company_email)
        </div>
        <div><label>Website:</label></div>
        <div>
            @Html.TextBoxFor(m => m.company_website)


        </div>
        <div><label>Location:</label></div>
        <div>
            @Html.TextBoxFor(m => m.company_location)


        </div>
        <div><label>Username:</label></div>
        <div>
            @Html.TextBoxFor(m => m.username)

        </div>


        <div><label>Password:</label></div>
        <div>
            @Html.PasswordFor(m => m.password)


        </div>
        <div><label>Confirm Password:</label></div>
        <div>
            @Html.PasswordFor(m => m.cpassword)
            @Html.ValidationMessageFor(m => m.cpassword)
        </div>
        <div>
            <input type="submit" value="Register" />
            @Html.DisplayFor(m => m.companymsg)
        </div>


    }

</div>
<style>

    #div1 {
        background-color: lightsteelblue;
    }

    h2 {
        color: darkblue;
    }
</style>


