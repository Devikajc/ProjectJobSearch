@model ProjectJobSearch.Models.searchjobscls
@{
    ViewBag.Title = "search_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Job Search</h1>

<div id="div1">
    @using (Html.BeginForm("search_click", "Search", FormMethod.Post))
    {
        <table>
            <tr>
                <td style="padding-left:8px;"> <label>JobTitle:</label></td>
                <td> @Html.TextBoxFor(m => m.insertse.job_title)</td>
                <td style="padding-left:8px;"> <label>Experience:</label></td>
                <td> @Html.TextBoxFor(m => m.insertse.job_experience)</td>
                <td style="padding-left:8px;"> <label>Skills:</label></td>
                <td> @Html.TextBoxFor(m => m.insertse.job_skills)</td>

                <td><input type="submit" value="search" /> </td>
            </tr>
        </table>
    }
</div>
<div>
    @using (Html.BeginForm("search_pageload", "Search", FormMethod.Get))
    {
        if (Model != null)
        {
            if (Model.selectjob != null && Model.selectjob.Count != 0)
            {
                <table class="table">
                    <tr>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.company_id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.job_title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.job_experience)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.job_skills)
                        </th>

                        <th>
                            @Html.DisplayNameFor(m => m.insertse.job_vacancy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.job_date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.job_status)
                        </th>

                    </tr>


                    @foreach (var item in Model.selectjob)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.company_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.job_title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.job_experience)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.job_skills)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.job_vacancy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.job_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.job_status)
                    </td>
                    <td>

                        @Html.ActionLink("Apply Now", "ApplyJob_pageload", "ApplyJob", new { cid = item.company_id, jid = item.job_id }, null)

                    </td>

                </tr>
                    }

                </table>
            }
            else
            {
                <script>
                    alert('no data found');
                </script>
            }
        }
    }
    <div>
        @Html.ActionLink("Back to Home Page", "UserHome", "Login")

    </div>


</div>
<style>

    #div1 {
        background-color: lightsteelblue;
    }

    h1 {
        color: darkblue;
    }
</style>




